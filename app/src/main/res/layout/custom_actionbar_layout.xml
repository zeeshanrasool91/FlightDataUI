<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="#d50000"
    android:id="@+id/linear_custom"

    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@drawable/ruppe_action_bar"
        android:id="@+id/image_view_action_bar_left"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#d50000"
        android:layout_height="wrap_content"
        android:text="Mkopo Pap"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_action_bar"
        android:layout_toRightOf="@+id/image_view_action_bar_left"
        android:layout_centerVertical="true"

        />

    <google_play.flightdataui.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_person_action_bar"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"


        />


</RelativeLayout>