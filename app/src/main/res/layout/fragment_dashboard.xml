
<ScrollView
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context="google_play.flightdataui.Personal_Detail"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"

    android:background="#f8e8e8"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:gravity="center_vertical"
        android:background="@drawable/dashboard_relative_selector"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/img_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/get_a_loan"

            />

        <TextView
            android:id="@+id/tv_get_a_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_one"
            android:text="Get a Loan"

            android:textSize="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_get_a_loan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_one"
            android:text="Apply for a loan in 24 hours" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/dashboard_relative_selector"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/img_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/build_trust" />

        <TextView
            android:id="@+id/tv_build_a_trust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_two"
            android:text="Build A Trust"

            android:textSize="21dp" />

        <TextView
            android:id="@+id/tv_apply_for_a_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_build_a_trust"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_two"
            android:text="Apply for a loan in 24 hours" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/dashboard_relative_selector"
        android:clickable="true"
        android:id="@+id/dashboard_activity_manage_account"
        >

        <ImageView

            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="40dp"
            android:id="@+id/img_three"
            android:src="@drawable/manage_account" />

        <TextView
            android:id="@+id/tv_manage_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_three"
            android:text="Manage Account"

            android:textSize="21dp" />

        <TextView
            android:id="@+id/tv_view_and_edit_your_account_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_manage_account"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_three"
            android:text="View and edit your account details" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/dashboard_relative_selector"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/img_four"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/get_answers" />

        <TextView
            android:id="@+id/tv_get_answeres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_four"
            android:text="Get Answers"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/tv_communicate_directly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_get_answeres"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_four"
            android:text="View and edit your account details" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/dashboard_relative_selector"
        android:id="@+id/end_RELATIVE_LAYOUT"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/img_five"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/abc_ab_share_pack_mtrl_alpha" />

        <TextView
            android:id="@+id/tv_see_my_loans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_five"
            android:text="See My Loans"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/tv_review_your_loans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_see_my_loans"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_five"
            android:text="View and edit your account details"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/end_RELATIVE_LAYOUT"
        ></View>
</LinearLayout>

</ScrollView>
