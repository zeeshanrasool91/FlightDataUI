<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="google_play.flightdataui.Manage_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67AFE9"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:background="#000"
        android:id="@+id/Linear_layout_first"
        >


        <TextView
            android:id="@+id/tv_get_a_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_one"
            android:text="Manage Account"
            android:textSize="21dp"
            android:textColor="#f9f9f9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_get_a_loan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_one"
            android:text="You can edit your account here"
            android:textColor="#f9f9f9"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:id="@+id/Linear_layout_second"
        android:weightSum="2"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name"
            android:gravity="center_vertical"
            android:id="@+id/tv_first_name_ma"
            android:textSize="20dp"
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_first_name_ma"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:id="@+id/et_first_name_ma"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:id="@+id/relative_layout_second"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pin Code"
            android:id="@+id/tv_last_name_ma"
            android:textSize="20dp"
           android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_weight="1.5"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_first_name_ma"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:id="@+id/linear_layout_second"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Email"
            android:id="@+id/tv_email_ma"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_weight="1.5"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:id="@+id/Linear_layout_fourth"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mobile"
            android:id="@+id/tv_phone_ma"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_weight="1.5"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_first_name_ma"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"

            />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_gravity="right" />

</LinearLayout>
